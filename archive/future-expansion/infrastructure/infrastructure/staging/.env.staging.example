# Staging Environment Configuration
# Copy this file to .env.staging and fill in the values

# Application Settings
ENVIRONMENT=staging
APP_TITLE="AI Road Trip Storyteller - Staging"
APP_VERSION=1.0.0-staging
DEBUG=false
LOG_LEVEL=INFO

# API Settings
PORT=8080
API_V1_STR=/api/v1

# Google Cloud Settings
GOOGLE_CLOUD_PROJECT=roadtrip-460720
GOOGLE_AI_LOCATION=us-central1
GOOGLE_AI_MODEL=gemini-1.5-pro

# Staging Feature Flags
TEST_MODE=mock
ALLOW_MOCK_MODE=true
REDIS_OPTIONAL=true
TTS_OPTIONAL=true

# Security Settings (Relaxed for staging)
FORCE_HTTPS=false
SECURE_COOKIES=false
JWT_SECRET_KEY=staging-secret-key-replace-in-production
SECRET_KEY=staging-secret-key-replace-in-production
CSRF_SECRET_KEY=staging-csrf-key-replace-in-production

# Database (Optional for staging)
DATABASE_URL=postgresql://user:password@localhost/roadtrip_staging

# Redis (Optional for staging)
REDIS_URL=redis://localhost:6379/0

# API Keys (Add actual keys or use mock mode)
GOOGLE_MAPS_API_KEY=
OPENWEATHERMAP_API_KEY=
TICKETMASTER_API_KEY=

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080","https://roadtrip-staging.web.app"]

# Performance Settings
WORKERS=2
WORKER_CONNECTIONS=100
TIMEOUT=120
MAX_REQUESTS=500