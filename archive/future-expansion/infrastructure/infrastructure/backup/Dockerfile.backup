FROM python:3.9-slim

# Install PostgreSQL client tools
RUN apt-get update && apt-get install -y \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir \
    google-cloud-storage==2.13.0 \
    psycopg2-binary==2.9.9

# Create backup directory
RUN mkdir -p /var/backups/postgres

# Copy backup script
WORKDIR /app
COPY scripts/database_backup.py scripts/
COPY backend/app/core/config.py backend/app/core/

# Create non-root user
RUN useradd -m -u 1000 backup && \
    chown -R backup:backup /app /var/backups/postgres

USER backup

# Default command
CMD ["python", "scripts/database_backup.py", "backup"]