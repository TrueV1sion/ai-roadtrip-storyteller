# Example environment variables for live integration testing
# Copy this file to .env and fill in your credentials

# Test Mode Configuration
# Set to "live" to run against real APIs (default: mock)
TEST_MODE=mock

# Report Generation
GENERATE_TEST_REPORTS=true

# OpenTable Credentials
OPENTABLE_TEST_MODE=mock
OPENTABLE_API_KEY=your_opentable_api_key
OPENTABLE_PARTNER_ID=your_opentable_partner_id

# Recreation.gov Credentials
RECREATION_GOV_TEST_MODE=mock
RECREATION_GOV_API_KEY=your_recreation_gov_api_key
RECREATION_GOV_AFFILIATE_ID=your_recreation_gov_affiliate_id

# Shell Recharge Credentials
SHELL_RECHARGE_TEST_MODE=mock
SHELL_RECHARGE_API_KEY=your_shell_recharge_api_key
SHELL_RECHARGE_PARTNER_ID=your_shell_recharge_partner_id
SHELL_RECHARGE_ENV=sandbox  # sandbox or production

# Test User Information (for live tests)
TEST_USER_FIRST_NAME=Test
TEST_USER_LAST_NAME=User
TEST_USER_EMAIL=test@example.com
TEST_USER_PHONE=+14155551234

# Safety Settings for Live Tests
MAX_TEST_BOOKINGS=3  # Maximum number of bookings to create in live tests
AUTO_CANCEL_BOOKINGS=true  # Automatically cancel test bookings after creation
TEST_BOOKING_PREFIX=TEST_  # Prefix for test booking names