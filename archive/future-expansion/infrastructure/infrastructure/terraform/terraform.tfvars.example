# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

# GCP Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"
environment = "production"

# Domain Configuration
domain = "roadtrip.example.com"

# GKE Configuration
gke_num_nodes      = 3
gke_machine_type   = "n2-standard-4"
gke_disk_size_gb   = 100
gke_min_node_count = 2
gke_max_node_count = 10

# Database Configuration
db_tier               = "db-n1-standard-2"
db_disk_size          = 100
db_disk_autoresize    = true
db_max_disk_size      = 500
db_backup_enabled     = true
db_backup_start_time  = "03:00"

# Redis Configuration
redis_memory_size = 4
redis_ha_enabled  = true

# Monitoring Configuration
enable_monitoring = true
alert_email      = "alerts@example.com"

# Security Configuration
allowed_ip_ranges = [
  "0.0.0.0/0"  # Allow all IPs - restrict this in production
]
ssl_policy = "MODERN"

# Application Configuration
app_replicas    = 3
celery_workers  = 2