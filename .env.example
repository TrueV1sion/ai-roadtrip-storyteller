# AI Road Trip Storyteller - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# === CORE CONFIGURATION ===
ENVIRONMENT=development
PORT=8000
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# === DATABASE ===
DATABASE_URL=postgresql://roadtrip:roadtrip@localhost:5432/roadtrip_dev
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# === REDIS CACHE ===
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password-here

# === GOOGLE CLOUD ===
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_AI_PROJECT_ID=your-gcp-project-id
VERTEX_AI_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# === GOOGLE APIS ===
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GCS_BUCKET_NAME=your-gcs-bucket-name

# === JWT AUTHENTICATION ===
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# === THIRD-PARTY SERVICES ===
# OpenWeather API (for weather data)
OPENWEATHER_API_KEY=your-openweather-api-key

# Spotify (for music integration)
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Stripe (for payments)
STRIPE_API_KEY=your-stripe-api-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Twilio (for SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# SendGrid (for emails)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# === BOOKING PARTNERS ===
# Ticketmaster
TICKETMASTER_API_KEY=your-ticketmaster-api-key
TICKETMASTER_SECRET=your-ticketmaster-secret

# GetYourGuide
GETYOURGUIDE_API_KEY=your-getyourguide-api-key
GETYOURGUIDE_PARTNER_ID=your-partner-id

# Viator
VIATOR_API_KEY=your-viator-api-key
VIATOR_PARTNER_CODE=your-partner-code

# === MONITORING ===
ENABLE_MONITORING=true
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=admin

# === MOBILE APP ===
API_BASE_URL=http://localhost:8000
EXPO_PUBLIC_API_URL=http://localhost:8000

# === FEATURE FLAGS ===
ENABLE_2FA=true
ENABLE_VOICE_PERSONALITIES=true
ENABLE_AR_FEATURES=true
ENABLE_GAMES=true
ENABLE_BOOKING_INTEGRATIONS=true

# === DEVELOPMENT ===
DEV_MODE=true
DEV_AUTHORIZED_PHONES=+1234567890,+0987654321
MOCK_AI_RESPONSES=false
USE_LOCAL_STORAGE=false